@model IEnumerable<BeverageManagement.Models.EntityModel.History>

@{
    ViewBag.Title = "SeePastHistoryByDate";
}

<h2>SeePastHistoryByDate</h2>
<div class="row"></div>
<div class="row">
    <div class="col-sm-2">
        <div class="sidebar-nav">
            <div class="navbar navbar-default" role="navigation">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <span class="visible-xs navbar-brand">Sidebar menu</span>
                </div>
                <div class="navbar-collapse collapse sidebar-navbar-collapse">
                    <ul class="nav navbar-nav">
                        @foreach (var item in Model) {
                            var thisTime = item.Dated;
                            var onlyDate = thisTime.ToString("dd/MM/yyyy");

                            <li>
                                <a href="#">
                                    @onlyDate
                                </a>
                            </li>
                        }
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>
    </div>
    <div class="col-sm-9">
        Main content goes here



        <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Dated)
                    </th>
                    <th></th>
                </tr>

            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dated)
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.HistoryID }) |
                        @Html.ActionLink("Details", "Details", new { id=item.HistoryID }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.HistoryID })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>