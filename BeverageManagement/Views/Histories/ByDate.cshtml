@using BeverageManagement.ViewModel
@model IEnumerable<BeverageManagement.Models.EntityModel.History>

@{
    ViewBag.Title = "Employees History by Date : " + ViewBag.dated.ToString("dd-MMM-yy");
    var datesList = (List<HistoryByDateViewModel>) ViewBag.datesList;
    Html.SetPageId("history-filtered-by-date");
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-sm-2">
        <div class="sidebar-nav">
            <ul class="nav nav-pills nav-stacked">
                <div class='input-group date datetimepicker', id="datetimepicker1">
                    <input type='text' class="form-control" />
                    <span class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </span>
                </div>
                @foreach (var item in datesList) {
                    <li>
                        <a href="@Url.Action("ByDate", new {dated = item.Date})">
                            @item.GetDisplay()
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
    <div class="col-sm-1"></div>
    <div class="col-sm-5">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Employee.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dated)
                </th>
            </tr>

            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employee.Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Dated)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>