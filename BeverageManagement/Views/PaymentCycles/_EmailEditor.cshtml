@model IEnumerable<BeverageManagement.Models.EntityModel.Employee>

<div class="form-horizontal">
    <h4>Employee</h4>
    <hr />
    @ViewBag.token
    <label>Subject</label>
    <input type="text" class="form-control full-width" name="emailSubject" value="Payment of Beverage"><br>

    <label>Body</label>
    <textarea class="tinymce" name="emailBody">
        @AppConfig.Config.DefaultEmailBody
        @ViewBag.employeesListHtml
        @AppConfig.Config.DefaultEmailFooter
        
    </textarea>
    
</div>
